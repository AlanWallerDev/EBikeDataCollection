<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alan.waller.e_bikedatacollection.MainActivity">

    <Button
        android:id="@+id/newSessionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="New Session"
        app:layout_constraintBottom_toTopOf="@+id/oldSessionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/oldSessionButton"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="View Old Sessions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/newSessionButton"
        app:layout_constraintStart_toStartOf="@+id/newSessionButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sign Out"
        app:layout_constraintEnd_toEndOf="@+id/pairButton"
        app:layout_constraintStart_toStartOf="@+id/pairButton"
        app:layout_constraintTop_toBottomOf="@+id/pairButton" />

    <Button
        android:id="@+id/pairButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pair Devices"
        app:layout_constraintEnd_toEndOf="@+id/oldSessionButton"
        app:layout_constraintStart_toStartOf="@+id/oldSessionButton"
        app:layout_constraintTop_toBottomOf="@+id/oldSessionButton" />

    <Button
        android:id="@+id/testPageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TEST"
        app:layout_constraintEnd_toEndOf="@+id/signOutButton"
        app:layout_constraintStart_toStartOf="@+id/signOutButton"
        app:layout_constraintTop_toBottomOf="@+id/signOutButton" />
</android.support.constraint.ConstraintLayout>
